{
  "networks": {
    "ethereum": {
      "lending": {
        "enabled": false,
        "simulate": true,
        "lendingWalletAddress": "[Use your own wallet]",
        "offerRules": [
          {
            "filter": "property.state === 'TX'",
            "loanPrincipal": "Math.min(property.value * 0.5, wallet.balances.usdc * 0.3)",
            "loanApr": "0.15",
            "loanDurationDays": 20,
            "offerExpirationDays": 7
          }
        ],
        "periodicity": "0 15 7 * * *"
      },
      "logging": {
        "verbose": false
      },
      "soilBaseUrl": "https://fabrica.land"
    },
    "sepolia": {
      "lending": {
        "enabled": true,
        "simulate": true,
        "lendingWalletAddress": "[Use your own wallet]",
        "offerRules": [
          {
            "borrower": "token.owner",
            "filter": "token.attributes.State === 'California'",
            "loanPrincipal": "Math.min(token.attributes['Estimated value in USD'] * 0.5, wallet.balances.usdc * 0.3)",
            "loanApr": "0.15",
            "loanDurationDays": 20,
            "offerExpirationDays": 7
          },
          {
            "borrower": "bnpl.address",
            "loanPrincipal": "Math.min(token.attributes['Estimated value in USD'] * 0.4, wallet.balances.usdc * 0.3)",
            "loanApr": "0.25",
            "loanDurationDays": 120,
            "offerExpirationDays": 30,
            "percentChanceToLend": 20
          }
        ],
        "periodicity": "0 15 7 * * *"
      },
      "logging": {
        "verbose": true
      },
      "soilBaseUrl": "https://testnets.fabrica.land"
    }
  }
}
